<!-- realTimeProducts.handlebars -->
<div class="container">
  <h2>Lista de Produtos</h2>

  <!-- Formulário para adicionar novos produtos -->
  <form id="productForm">
        <input type="text" id="productName" placeholder="Nome do produto" required>
        <input type="text" id="productDescription" placeholder="Descrição" required>
        <input type="number" id="productPrice" placeholder="Preço" required>
        <button type="submit">Adicionar Produto</button>
  </form>

  <!-- Lista de produtos -->
  <ul id="productList">
        {{#each products}}
        <li data-id="{{id}}">
            <h2>{{title}}</h2>
            <p>{{description}}</p>
            <p><strong>Preço:</strong> R$ {{price}}</p>
            <button class="deleteButton">Excluir</button>
        </li>
        {{/each}}
  </ul>
</div>

<!-- Inclusão do Socket.IO e do script JS -->
<script src="/socket.io/socket.io.js"></script>
<script src="/js/index.js"></script>
